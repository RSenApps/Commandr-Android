<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_positive_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_positive_focused" />
            <stroke android:width="2dp" android:color="@color/apptentive_dialog_button_positive_border_focused" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_positive_disabled" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_positive" />
        </shape>
    </item>
</selector>